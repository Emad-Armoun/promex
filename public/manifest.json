{
  "manifest_version": 2,
  "short_name": "PromoEx",
  "name": "Promotool Chrome Extension",
  "version": "1.0.0",
  "description": "A simple Chrome extension built with React for the Promotool team",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "permissions": ["activeTab"]
}
